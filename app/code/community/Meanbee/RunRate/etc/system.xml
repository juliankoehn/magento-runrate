<?xml version="1.0"?>
<config>
    <sections>
        <cataloginventory translate="label" module="cataloginventory">
            <groups>
                <meanbee_runrate translate="label">
                    <label>Meanbee: Run Rate Report</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <comment>
                        <![CDATA[
                            <div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;">
                                <p><strong>Documentation and Support</strong></p>
                                For instructions on how to configure and use this extension, please visit our documentation at: <a href="http://help.meanbee.com/kb/run-rate">http://help.meanbee.com/kb/run-rate</a>.
                                If your issue is not covered, you find a problem with the extension, or just want to give us some feedback, email us as at: <a href="mailto:hello@meanbee.com">hello@meanbee.com</a>.
                            </div>
                        ]]>
                    </comment>
                    <fields>
                        <average_run_weeks>
                            <label>Average Run Week Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Specify the number of weeks that should be used to calculate the average run of a product.</comment>
                        </average_run_weeks>
                        <lead_time_attribute translate="label">
                            <label>Lead Time Attribute</label>
                            <frontend_type>select</frontend_type>
                            <source_model>meanbee_runrate/system_config_source_productAttribute</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Specify the attribute that contains your lead time integer value in days.</comment>
                        </lead_time_attribute>
                    </fields>
                </meanbee_runrate>
            </groups>
        </cataloginventory>
    </sections>
</config>
